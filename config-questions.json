{
  "auth":[
    {
      "type":"input",
      "name":"host",
      "message":"Jira server host. no protocol",
      "default":"subdomain.atlassian.net"
    },
    {
      "type":"list",
      "name":"protocol",
      "message":"Jira server REST API version",
      "default":"https",
      "choices":[
        {
          "name":"Https",
          "value":"https"
        },
        {
          "name":"Http",
          "value":"http"
        }
      ]
    },
    {
      "type":"list",
      "name":"version",
      "message":"Jira server REST API version",
      "default":"2",
      "choices":[
        {
          "name":"v1",
          "value":"1"
        },
        {
          "name":"v2",
          "value":"2"
        }
      ]
    },
    {
      "type":"input",
      "name":"port",
      "message":"Port",
      "default":"80"
    },
    {
      "type":"input",
      "name":"prefix",
      "message":"Path Prefix",
      "default":"/"
    },
    {
      "type":"input",
      "name":"user",
      "message":"Username"
    },
    {
      "type":"password",
      "name":"pass",
      "message":"Password"
    }
  ],
  "issues":{
    "mainMenu":{
      "type":"list",
      "name":"mainMenuOption",
      "message":"How do you wanna get your issue?",
      "default":"key",
      "choices":[
        {
          "name":"Input the issue key",
          "value":"key"
        },
        {
          "name":"Pick from my currently assigned",
          "value":"assigned"
        },
        {
          "name":"I'm done for now",
          "value":"cancel"
        }
      ]
    },
    "keyMenu":{
      "type":"list",
      "name":"keyMenuOption",
      "message":"What else do you wanna do?",
      "default":"more",
      "choices":[
        {
          "name":"Add another issue",
          "value":"more"
        },
        {
          "name":"View current issues",
          "value":"view"
        },
        {
          "name":"Finish configuration",
          "value":"finish"
        }
      ]
    },
    "issueKey":{
      "type":"input",
      "name":"key",
      "message": "Input the issue key"
    },
    "issueTime":{
      "type":"input",
      "name":"time",
      "message":"Input the issue time as you would in a worklog.",
      "default":"1d"
    }
  }
}
